	journal = {国际贸易问题},
	author = {古, 柳},
	year = {2020},
	keywords = {动力源, 全球价值链, 人口数量, 人口质量, Global Value Chain, Population Quality, Population Quantity, Power Source},
	pages = {97--111},
}

@article{_pvar_2020,
	title = {人口结构、人口质量与产业结构转型升级——基于{PVAR模型的实证分析}},
	volume = {36},
	issn = {1674-3288},
	abstract = {基于2001—2016年我国31个省份的面板数据,采用PVAR模型分析人口结构、人口质量与产业结构转型升级之间的关系。研究表明,产业结构转型升级不仅依赖自身积累,而且较低的总抚养比能促进产业结构转型升级,进而创造大量的就业岗位,有利于非农就业人口的就业,也有利于人口平均受教育年限的提升。由此得出结论,产业结构转型升级一方面是以劳动力为基石,又反过来有助于提升劳动力的素质,这种相互促进的关系启示我们不仅要优化经济产业结构,也要优化人口结构,提升人口质量,使经济向更高层次迈进。},
	language = {中文;},
	number = {04},
	urldate = {2020-12-23},
	journal = {吉林工商学院学报},
	author = {赵, 茂林 and 李, 鹏},
	year = {2020},
	keywords = {产业结构, 人口结构, 人口质量},
	pages = {5--12},
}
